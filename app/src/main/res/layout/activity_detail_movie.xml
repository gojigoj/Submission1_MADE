<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purpleLight"
    tools:context=".DetailMovieActivity">

    <View
        android:layout_marginTop="75dp"
        android:layout_width="wrap_content"
        android:layout_height="710dp"
        android:background="@drawable/bgdetail"
        android:alpha="0.15" />

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:elevation="0dp">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/purpleLight"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detail_page"
                android:fontFamily="@font/mmedium"
                android:textSize="18sp"
                android:textColor="@android:color/black"/>


        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/iv_movie_poster"
                android:layout_width="120dp"
                android:layout_height="180dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:src="@drawable/poster_film"/>

            <TextView
                android:id="@+id/tv_movie_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_movie_poster"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="22dp"
                android:text="@string/movie_title"
                android:textSize="20sp"
                android:fontFamily="@font/mbold"
                android:maxLines="2"
                android:textAlignment="center"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/tv_movie_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_movie_title"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="22dp"
                android:text="@string/movie_desc"
                android:textSize="16sp"
                android:textAlignment="center"
                android:fontFamily="@font/mlight"
                android:textColor="@android:color/black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_movie_desc"
                android:layout_marginHorizontal="24dp"
                android:layout_marginBottom="20dp"
                android:orientation="vertical"
                android:padding="24dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/shape_detail">

                <TextView
                    style="@style/TextContent.descGroupTitle"
                    android:layout_marginTop="0dp"
                    android:text="@string/rating"/>

                <TextView
                    android:id="@+id/tv_movie_rating"
                    style="@style/TextContent.descGroupDetail"
                    android:textSize="32sp"
                    android:fontFamily="@font/msemibold"
                    android:text="@string/movie_rating"/>

                <TextView
                    style="@style/TextContent.descGroupTitle"
                    android:text="@string/release_date"/>

                <TextView
                    android:id="@+id/tv_movie_release"
                    style="@style/TextContent.descGroupDetail"
                    android:text="@string/movie_release"/>

                <TextView
                    style="@style/TextContent.descGroupTitle"
                    android:text="@string/runtime"/>

                <TextView
                    android:id="@+id/tv_movie_time"
                    style="@style/TextContent.descGroupDetail"
                    android:text="@string/movie_time"/>

                <TextView
                    style="@style/TextContent.descGroupTitle"
                    android:text="@string/genre"/>

                <TextView
                    android:id="@+id/tv_movie_genre"
                    style="@style/TextContent.descGroupDetail"
                    android:maxLines="2"
                    android:text="@string/movie_genre"/>

                <TextView
                    style="@style/TextContent.descGroupTitle"
                    android:text="@string/directors"/>

                <TextView
                    android:id="@+id/tv_movie_directors"
                    style="@style/TextContent.descGroupDetail"
                    android:maxLines="2"
                    android:text="@string/movie_directors"/>

                <TextView
                    style="@style/TextContent.descGroupTitle"
                    android:text="@string/writers"/>

                <TextView
                    android:id="@+id/tv_movie_writers"
                    style="@style/TextContent.descGroupDetail"
                    android:maxLines="2"
                    android:text="@string/movie_writers"/>

                <TextView
                    style="@style/TextContent.descGroupTitle"
                    android:text="@string/studio"/>

                <TextView
                    android:id="@+id/tv_movie_studio"
                    style="@style/TextContent.descGroupDetail"
                    android:maxLines="2"
                    android:text="@string/movie_studio"/>

            </LinearLayout>

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>



</androidx.coordinatorlayout.widget.CoordinatorLayout>